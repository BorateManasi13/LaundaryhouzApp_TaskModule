<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/19/2021"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtYourOrdertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Order #  "
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_grey"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rahul Yadav"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raipur"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8251090001"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rahul@sjain.io"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/imgBtnMinusDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/date_decrease"
            android:background="@drawable/solid_square"/>

        <EditText
            android:id="@+id/edtdate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="01/22/2021"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="11"
            android:background="@drawable/date_edittext_border" />

        <ImageButton
            android:id="@+id/imgBtnPlusDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/date_increase"
            android:background="@drawable/solid_square" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edttimepicker"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="12:00 PM"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="25dp"
                android:inputType="number"
                android:textSize="20sp"
                android:maxLength="11"
                android:background="@drawable/date_edittext_border"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="35dp" />

            <ImageButton
                android:id="@+id/imgbtntimepicker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/time_picker"
                android:background="@drawable/solid_time_square"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_grey"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtQuantityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtViewAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:gravity="right|center"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_grey"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/txtTotalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/txtDiscountTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_below="@id/txtTotalAmount"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/imgbtnpercent"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/percent_white"
                android:background="@drawable/solid_square_theme_color"
                android:layout_below="@+id/txtDiscountTitle"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btnflatrs"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="Flat"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_border"
                android:layout_toRightOf="@+id/imgbtnpercent"
                android:layout_below="@+id/txtDiscountTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/linearLayoutFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtDiscountTitle"
                android:gravity="end"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtINRForFlat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="INR"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/txtGrandTotalTitle"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_text_border"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtDiscountTitle"
                android:gravity="end">

                <TextView
                    android:id="@+id/txtINRpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="INR"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txtINRAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"/>

                <NumberPicker
                    android:id="@+id/picker"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_toLeftOf="@+id/imgbtnpercentimage"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:id="@+id/imgbtnpercentimage"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/percent_black"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtTaxTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax (18%) "
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/imgbtnpercent"/>

            <TextView
                android:id="@+id/txtTaxAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imgbtnpercent"/>

            <TextView
                android:id="@+id/txtExtraProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Product : "
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtTaxTitle"/>

            <TextView
                android:id="@+id/txtINRTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtTaxTitle"
                android:layout_toRightOf="@+id/txtExtraProduct"/>

            <TextView
                android:id="@+id/txtINRValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtTaxTitle"
                android:layout_toRightOf="@id/txtINRTitle"/>

            <TextView
                android:id="@+id/txtQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Qty: 0)"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txtTaxTitle"
                android:layout_toRightOf="@+id/txtINRValue"/>

            <ImageButton
                android:id="@+id/imgbtnExtraProducts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/date_increase"
                android:background="@color/yellow_A200"
                android:layout_below="@id/txtTaxTitle"
                android:layout_toRightOf="@+id/txtQty"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txtGrandTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txtExtraProduct"/>

            <TextView
                android:id="@+id/txtGrandTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtExtraProduct"/>

            <TextView
                android:id="@+id/txtAdvanceTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Advance"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="17sp"
                android:layout_below="@+id/txtGrandTotalTitle"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spPaymentOption"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtGrandTotalTitle"
                android:layout_toRightOf="@+id/txtAdvanceTitle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="0"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/txtGrandTotalTitle"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:gravity="center|end"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/txtDueTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Current Due"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal"
                android:layout_below="@+id/txtAdvanceTitle"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtDueValue"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_below="@+id/txtAdvanceTitle"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/txtDueTitle"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/yellow_200"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>