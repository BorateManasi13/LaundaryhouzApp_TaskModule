<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:background="@drawable/button_border_grey"-->

   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Garments on KG Type"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@color/grey1"
        android:gravity="center"/>-->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/button_border_grey"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtClothName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="Shirt Normal"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtQty"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:text="(Qty:1)"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center" />

            <ImageView
                android:id="@+id/imgUrl"
                android:layout_width="100dp"
                android:adjustViewBounds="true"
                android:layout_height="100dp"
                android:src="@drawable/android"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtWashType"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:background="@color/tintlightgrey"
                android:textSize="15sp"
                android:text="Dryclean"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>